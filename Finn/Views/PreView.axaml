<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Finn.ViewModels"
			 xmlns:mupdf="clr-namespace:MuPDFCore.MuPDFRenderer;assembly=MuPDFCore.MuPDFRenderer"
			 xmlns:ic="using:FluentIcons.Avalonia" 
			 xmlns:anim="clr-namespace:Avalonia.Animation;assembly=MuPDFCore.MuPDFRenderer"
			 xmlns:converter="clr-namespace:Finn.Converters"
			 xmlns:ctrl="clr-namespace:Finn.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:MainViewModel"
             x:Class="Finn.Views.PreView">
	
	<UserControl.Resources>
		<converter:ShortenStringConverter x:Key="ShortenStringConverter" />
		<converter:AddOneConverter x:Key="AddOneConverter"/>
		<converter:AddPageConverter x:Key="AddPageConverter"/>
		<converter:GridDefConverter x:Key="GridDefConverter"/>
	</UserControl.Resources>

	<UserControl.Styles>
		<Style Selector="Border">
			<Setter Property="CornerRadius" Value="{Binding Storage.General.CornerRadius}"/>
		</Style>
	</UserControl.Styles>

	<Grid Name="MainPreviewGrid" RowDefinitions="*,40" ColumnDefinitions="*,Auto" Margin="0">
		<Grid Name="PreviewGrid" ClipToBounds="True" ColumnDefinitions="*" RowDefinitions="*"
      Grid.Row="0" Grid.Column="0"
      Background="{Binding PreviewVM.PreviewBackground}">
			<LayoutTransformControl Name="Tester">
				<LayoutTransformControl.LayoutTransform>
					<RotateTransform Angle="{Binding PreviewVM.Rotation}"/>
				</LayoutTransformControl.LayoutTransform>

				<Grid Name="ViewArea" Grid.Column="1" Grid.Row="0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="5"/>
						<ColumnDefinition Width="{Binding PreviewVM.TwopageMode, Converter={StaticResource GridDefConverter}}"/>
					</Grid.ColumnDefinitions>

					<mupdf:PDFRenderer Name="MuPDFRenderer" Grid.Column="0" Background="Transparent" PageBackground="White"
			   ZoomEnabled="False" PointerWheelChanged="ModifiedControlPointerWheelChanged"
			   ZoomIncrement="1.3" ClipToBounds="True" PointerEventHandlersType="PanHighlight">
						<mupdf:PDFRenderer.ContextMenu>
							<ContextMenu>
								<MenuItem Header="Copy" Command="{Binding PreviewVM.CopyToClipboard}" CommandParameter="{Binding $parent[Window]}">
									<MenuItem.Icon><ic:SymbolIcon Symbol="Clipboard"/></MenuItem.Icon>
								</MenuItem>
							</ContextMenu>
						</mupdf:PDFRenderer.ContextMenu>
					</mupdf:PDFRenderer>

					<mupdf:PDFRenderer Name="MuPDFRendererSecondary" Grid.Column="2" Background="Transparent" PageBackground="White"
			   ZoomEnabled="False" PointerWheelChanged="ModifiedControlPointerWheelChanged"
			   ZoomIncrement="1.3" ClipToBounds="True" PointerEventHandlersType="PanHighlight" IsVisible="{Binding PreviewVM.TwopageMode}">
						<mupdf:PDFRenderer.ContextMenu>
							<ContextMenu>
								<MenuItem Header="Copy" Command="{Binding PreviewVM.CopyToClipboard}" CommandParameter="{Binding $parent[Window]}">
									<MenuItem.Icon><ic:SymbolIcon Symbol="Clipboard"/></MenuItem.Icon>
								</MenuItem>
							</ContextMenu>
						</mupdf:PDFRenderer.ContextMenu>
					</mupdf:PDFRenderer>

					<!-- Inversion overlay: renders LAST, spans all columns, passes input through -->
					<ctrl:InvertColorControl Grid.ColumnSpan="3"
						IsInverted="{Binding PreviewVM.DarkMode}"
						IsHitTestVisible="False" />
				</Grid>
			</LayoutTransformControl>
		</Grid>

		<Grid Name="SearchGrid" MinWidth="0" Grid.Column="1" ClipToBounds="True" Width="200" IsVisible="{Binding PreviewVM.SearchMode}">
			<Border Name="SearchGridBorder" Grid.Row="0" Margin="5" Background="{DynamicResource TextControlBackground}" BoxShadow="{Binding Storage.General.Shadow}" CornerRadius="{Binding Storage.General.CornerRadius}">
				<Grid RowDefinitions="10,35,30,*">

					<Border Grid.Row="1" Width="170" HorizontalAlignment="Center" FlowDirection="LeftToRight">
						<Grid ColumnDefinitions="*,30,30" Margin="-5 0 -5 0">
							<TextBox Grid.Column="0" Watermark="Seach String" Name="SearchRegex" KeyDown="OnStartSearhRegex"/>
							<Button Grid.Column="1" Margin="0" Click="OnSeachRegex" BorderThickness="0" IsEnabled="{Binding !PreviewVM.SearchBusy}">
								<ic:SymbolIcon Symbol="Search" IconVariant="Regular" FontSize="16"/>
							</Button>
							<Button Grid.Column="2" Margin="0" Click="OnClearSearch" BorderThickness="0">
								<ic:SymbolIcon Symbol="Dismiss" IconVariant="Regular" FontSize="16"/>
							</Button>
						</Grid>
					</Border>

					<Border Grid.Row="2" BorderBrush="Gray" BorderThickness="0 0 0 1">
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
							<Button ToolTip.Tip="Prev Search" ToolTip.Placement="Right" BorderThickness="0" Theme="{DynamicResource MaterialButtonBase}" Command="{Binding PreviewVM.PrevSearchPage}">
								<ic:SymbolIcon Symbol="ArrowPrevious" IconVariant="Regular" FontSize="16"/>
							</Button>

							<Button ToolTip.Tip="Next Search" ToolTip.Placement="Right" BorderThickness="0" Theme="{DynamicResource MaterialButtonBase}" Command="{Binding PreviewVM.NextSearchPage}">
								<ic:SymbolIcon Symbol="ArrowNext" IconVariant="Regular" FontSize="16"/>
							</Button>

							<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
								<Label Content="{Binding PreviewVM.SearchPageIndex, Converter={StaticResource AddOneConverter}}" VerticalAlignment="Center"/>
								<Label Content="/" VerticalAlignment="Center"/>
								<Label Content="{Binding PreviewVM.SearchItems}" VerticalAlignment="Center"/>
							</StackPanel>
						</StackPanel>
					</Border>

					<ListBox Grid.Row="3" ItemsSource="{Binding PreviewVM.SearchPagesText}" Background="Transparent" SelectedIndex="{Binding PreviewVM.SearchPageIndex}" FontSize="13">
						<ListBox.Styles>
							<Style Selector="ListBoxItem">
								<Setter Property="Height" Value="25"/>
								<Setter Property="Padding" Value="10 0 0 0"/>
								<Setter Property="VerticalContentAlignment" Value="Center"/>
							</Style>
						</ListBox.Styles>
					</ListBox>

				</Grid>
			</Border>
		</Grid>

		<Grid ColumnDefinitions="*,Auto,*" Grid.Row="1" Grid.ColumnSpan="2">
			<Border Grid.Column="1" BoxShadow="{Binding Storage.General.Shadow}"
					Background="{DynamicResource TextControlBackground}" Margin="5"
					Padding="4,0">
				<StackPanel FlowDirection="LeftToRight" Orientation="Horizontal" Spacing="2" HorizontalAlignment="Center" Margin="10 0 10 0" DataContext="{Binding PreviewVM}" Width="">

					<Slider Name="ScrollSlider" FlowDirection="LeftToRight" Width="200" Height="35" Margin="0 -10 0 0" Minimum="1" IsSnapToTickEnabled="True" VerticalAlignment="Top"
							TickFrequency="1" Maximum="{Binding Pagecount}" Value="{Binding RequestPage1, Mode=OneWay, Converter={StaticResource AddOneConverter}}"/>


					<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
						<Label Content="{Binding CurrentPage1, Converter={StaticResource AddOneConverter}}" Width="40" HorizontalContentAlignment="Right" VerticalAlignment="Center"/>
						<Label Content="/" VerticalAlignment="Center"/>
						<Label Content="{Binding Pagecount}" VerticalAlignment="Center"/>
					</StackPanel>

					<Button ToolTip.Tip="Previous Page, Left" HotKey="Left" FontWeight="Normal" ToolTip.Placement="Right" BorderThickness="0" Command="{Binding PrevPage}" CommandParameter="false">
						<ic:SymbolIcon Symbol="ArrowPrevious" IconVariant="Regular" FontSize="16"/>
					</Button>

					<Button ToolTip.Tip="Next Page, Right" HotKey="Right" FontWeight="Normal" ToolTip.Placement="Right" BorderThickness="0" Command="{Binding NextPage}" CommandParameter="false">
						<ic:SymbolIcon Symbol="ArrowNext" IconVariant="Regular" FontSize="16"/>
					</Button>

					<Button ToolTip.Tip="Rotate Page, counter clockwise" FontWeight="Normal" ToolTip.Placement="Right" BorderThickness="0" Click="RotateLeft">
						<ic:SymbolIcon Symbol="RotateLeft" IconVariant="Regular" FontSize="16"/>
					</Button>

					<Button ToolTip.Tip="Rotate Page, clockwise" FontWeight="Normal" ToolTip.Placement="Right" BorderThickness="0" Click="RotateRight">
						<ic:SymbolIcon Symbol="RotateRight" IconVariant="Regular" FontSize="16"/>
					</Button>


					<Button ToolTip.Tip="Toggle Dimmed Background, Ctrl + G" HotKey="Ctrl+G" FontWeight="Normal" Name="DimmedMode" Command="{Binding ToggleDarkMode}" ToolTip.Placement="Right">
						<StackPanel>
							<ic:SymbolIcon Symbol="WeatherMoonOff" IconVariant="Regular" FontSize="16" IsVisible="{Binding !DarkMode}"/>
							<ic:SymbolIcon Symbol="WeatherMoon" IconVariant="Regular" FontSize="16" IsVisible="{Binding DarkMode}"/>
						</StackPanel>
					</Button>

					<ToggleButton ToolTip.Tip="Dual Page Mode, Ctrl + D" HotKey="Ctrl+D" FontWeight="Normal" ToolTip.Placement="Right" Name="DualMode" IsChecked="{Binding TwopageMode}">
						<StackPanel>
							<ic:SymbolIcon Symbol="BookOpen" IconVariant="Regular" FontSize="16"/>
						</StackPanel>
					</ToggleButton>

					<ToggleButton ToolTip.Tip="Linked page, Ctrl + L" HotKey="Ctrl+L" FontWeight="Normal" ToolTip.Placement="Right" Name="LinkedPageMode" IsVisible="{Binding TwopageMode}" IsChecked="{Binding LinkedPageMode}">
						<StackPanel>
							<ic:SymbolIcon Symbol="Link" IconVariant="Regular" FontSize="16"/>
						</StackPanel>
					</ToggleButton>

					<ToggleButton ToolTip.Tip="Open Search, Ctrl + F" HotKey="Ctrl+F" FontWeight="Normal" ToolTip.Placement="Right" Name="SearchMode" IsChecked="{Binding SearchMode}">
						<StackPanel>
							<ic:SymbolIcon Symbol="Search" IconVariant="Regular" FontSize="16" IsVisible="{Binding !SearchMode}"/>
							<ic:SymbolIcon Symbol="DocumentSearch" IconVariant="Regular" FontSize="16" IsVisible="{Binding SearchMode}"/>
						</StackPanel>
					</ToggleButton>

					<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10 0 5 0">
						<ic:SymbolIcon Symbol="Checkmark" IconVariant="Regular" FontSize="16" IsVisible="{Binding !FileWorkerBusy}"/>
						<ic:SymbolIcon Symbol="ArrowClockwise" IconVariant="Regular" FontSize="16" IsVisible="{Binding FileWorkerBusy}"/>
					</StackPanel>
			
					<Slider Name="ScrollSliderSecondary" FlowDirection="LeftToRight" Width="200" Height="35" Margin="0 -10 0 0" Minimum="1" IsSnapToTickEnabled="True" VerticalAlignment="Top"
						TickFrequency="1" Maximum="{Binding Pagecount}" IsVisible="{Binding !LinkedPageMode}" Value="{Binding RequestPage2, Mode=OneWay, Converter={StaticResource AddOneConverter}}"/>
			
					<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" IsVisible="{Binding !LinkedPageMode}">
						<Label Content="{Binding CurrentPage2, Converter={StaticResource AddOneConverter}}" Width="40" HorizontalContentAlignment="Right" VerticalAlignment="Center"/>
						<Label Content="/" VerticalAlignment="Center"/>
						<Label Content="{Binding Pagecount}" VerticalAlignment="Center"/>
					</StackPanel>

					<Button FontWeight="Normal" BorderThickness="0" IsVisible="{Binding !LinkedPageMode}" Command="{Binding PrevPage}" CommandParameter="true">
						<ic:SymbolIcon Symbol="ArrowPrevious" IconVariant="Regular" FontSize="16"/>
					</Button>

					<Button FontWeight="Normal" BorderThickness="0" IsVisible="{Binding !LinkedPageMode}" Command="{Binding NextPage}" CommandParameter="true">
						<ic:SymbolIcon Symbol="ArrowNext" IconVariant="Regular" FontSize="16"/>
					</Button>

				</StackPanel>
			</Border>
		</Grid>
	</Grid>

</UserControl>
