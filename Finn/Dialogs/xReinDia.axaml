<Window xmlns="https://github.com/avaloniaui"
        xmlns:ic="using:FluentIcons.Avalonia"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="420" d:DesignHeight="520"
        Width="420"
        Height="640"
        x:Class="Finn.Dialog.xReinDia"
        Title="Reinforcement Calculator"
        xmlns:vm="clr-namespace:Finn.ViewModels"
        CanResize="True"
        WindowStartupLocation="CenterScreen"
        ExtendClientAreaToDecorationsHint="True"
        x:DataType="vm:MainViewModel">

    <Window.Styles>
        <Style Selector="RadioButton.segment">
            <Setter Property="MinWidth" Value="52"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="{DynamicResource TextControlBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="RadioButton.segment:pointerover">
            <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}"/>
        </Style>
        <Style Selector="RadioButton.segment:checked">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="RadioButton.segment-first">
            <Setter Property="CornerRadius" Value="8,0,0,8"/>
        </Style>
        <Style Selector="RadioButton.segment-last">
            <Setter Property="CornerRadius" Value="0,8,8,0"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="100,*" Margin="0">
        <!-- Dialog header with icon and title -->
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6" Margin="0,48,0,0">
            <Border Width="48" Height="48" CornerRadius="24" Background="{DynamicResource SystemAccentColor}" HorizontalAlignment="Center">
                <ContentControl>
                    <ic:SymbolIcon Symbol="Calculator" FontSize="32" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </ContentControl>
            </Border>
            <TextBlock Text="Reinforcement calculator" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource SystemAccentColor}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="24">

            <!-- Layer 1 -->
            <StackPanel Orientation="Vertical" Spacing="8" Width="360">
                <TextBlock Text="Layer 1" FontSize="16" FontWeight="Bold" Margin="0,0,0,4" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Vertical" Spacing="4">
                    <TextBlock Text="Diameter" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <StackPanel Name="GroupA1" Orientation="Horizontal" Spacing="0" HorizontalAlignment="Center">
                        <RadioButton GroupName="FactorA1" Content="0" Tag="0" Classes="segment segment-first"/>
                        <RadioButton GroupName="FactorA1" Content="12" Tag="12" Classes="segment"/>
                        <RadioButton GroupName="FactorA1" Content="16" Tag="16" IsChecked="True" Classes="segment"/>
                        <RadioButton GroupName="FactorA1" Content="20" Tag="20" Classes="segment"/>
                        <RadioButton GroupName="FactorA1" Content="25" Tag="25" Classes="segment"/>
                        <RadioButton GroupName="FactorA1" Content="32" Tag="32" Classes="segment segment-last"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical" Spacing="4">
                    <TextBlock Text="c/c" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <StackPanel Name="GroupB1" Orientation="Horizontal" Spacing="0" HorizontalAlignment="Center">
                        <RadioButton GroupName="FactorB1" Content="100" Tag="100" Classes="segment segment-first"/>
                        <RadioButton GroupName="FactorB1" Content="110" Tag="110" Classes="segment"/>
                        <RadioButton GroupName="FactorB1" Content="120" Tag="120" Classes="segment"/>
                        <RadioButton GroupName="FactorB1" Content="150" Tag="150" Classes="segment"/>
                        <RadioButton GroupName="FactorB1" Content="200" Tag="200" IsChecked="True" Classes="segment"/>
                        <RadioButton GroupName="FactorB1" Content="250" Tag="250" Classes="segment segment-last"/>
                    </StackPanel>
                </StackPanel>

            </StackPanel>

            <!-- Layer 2 -->
            <StackPanel Orientation="Vertical" Spacing="8" Width="360">
                <TextBlock Text="Layer 2" FontSize="16" FontWeight="Bold" Margin="0,0,0,4" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Vertical" Spacing="4">
                    <TextBlock Text="Diameter" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <StackPanel Name="GroupA2" Orientation="Horizontal" Spacing="0" HorizontalAlignment="Center">
                        <RadioButton GroupName="FactorA2" Content="0" Tag="0" IsChecked="True" Classes="segment segment-first"/>
                        <RadioButton GroupName="FactorA2" Content="12" Tag="12" Classes="segment"/>
                        <RadioButton GroupName="FactorA2" Content="16" Tag="16" Classes="segment"/>
                        <RadioButton GroupName="FactorA2" Content="20" Tag="20" Classes="segment"/>
                        <RadioButton GroupName="FactorA2" Content="25" Tag="25" Classes="segment"/>
                        <RadioButton GroupName="FactorA2" Content="32" Tag="32" Classes="segment segment-last"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical" Spacing="4">
                    <TextBlock Text="c/c" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <StackPanel Name="GroupB2" Orientation="Horizontal" Spacing="0" HorizontalAlignment="Center">
                        <RadioButton GroupName="FactorB2" Content="100" Tag="100" IsChecked="True" Classes="segment segment-first"/>
                        <RadioButton GroupName="FactorB2" Content="110" Tag="110" Classes="segment"/>
                        <RadioButton GroupName="FactorB2" Content="120" Tag="120" Classes="segment"/>
                        <RadioButton GroupName="FactorB2" Content="150" Tag="150" Classes="segment"/>
                        <RadioButton GroupName="FactorB2" Content="200" Tag="200" Classes="segment"/>
                        <RadioButton GroupName="FactorB2" Content="250" Tag="250" Classes="segment segment-last"/>
                    </StackPanel>
                </StackPanel>

                <Border Height="2" Background="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" Margin="0,2" Opacity="0.5"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                    <TextBlock Text="As:" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Name="ResultText2" Text="10.05" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"
                               Foreground="{DynamicResource SystemAccentColor}"/>
                    <TextBlock Text="cmÂ²" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
